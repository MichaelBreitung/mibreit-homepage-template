{
    "name": "mibreit_web_tooling",
    "dockerComposeFile": "./docker-compose.yml",
    "service": "mibreit-web-dev",
    "workspaceFolder": "/home/develop",
    "shutdownAction": "stopCompose",
    "mounts": [
        // Bind the docker socket of the host to the container-internal socket
        "source=//var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        // Forward host SSH agent to container, to be able to use Git via SSH
        "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind"
    ],
    "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "asciidoctor.asciidoctor-vscode",
                "redhat.vscode-yaml",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "esbenp.prettier-vscode",
                "yoavbls.pretty-ts-errors",
                "ms-python.python",
                "ms-python.mypy-type-checker",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "bmewburn.vscode-intelephense-client",
                "douglaszaltron.nunjucks-vscode-extensionpack"
            ],
            "settings": {
                "editor.tabSize": 2,
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {},
                "editor.trimAutoWhitespace": true,
                "editor.defaultFormatter": "ms-python.black-formatter",
                "[javascript]": {
                  "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[css]": {
                  "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[scss]": {
                  "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[typescript]": {
                  "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[json]": {
                  "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[php]": {
                  "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
                },
                "[html]": {
                  "editor.defaultFormatter": "vscode.html-language-features"
                },
                "[njk]": {
                  "editor.defaultFormatter": "douglaszaltron.nunjucks-vscode-extensionpack"
                },
                "typescript.updateImportsOnFileMove.enabled": "always",
                "javascript.updateImportsOnFileMove.enabled": "always",
                "mypy-type-checker.importStrategy": "fromEnvironment",
                "mypy-type-checker.args": ["--strict", "--show-error-codes", "--cache-dir", "build/.mypy_cache"],
                "python.pythonPath": "/usr/bin/python3",
                "html.suggest.html5": true,
                "emmet.includeLanguages": {
                  "njk": "html"
                },
                "files.associations": {
                  "*.njk": "njk"
                }
            }
        }
    }
}