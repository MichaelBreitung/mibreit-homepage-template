{#
# inserts html for mailing list form
# @param privacy_form_url - url of privacy form
#}
{% macro mibreitMailingList(privacy_form_url, show_unsubscribe = true) %}
  <form id="mailing-list" class="mibreit-mailing-list" name="mibreit-mailing-list" method="post" autocomplete="off">
    <table>
      <tr>
        <td class="mibreit-mailing-list__left">
          <label for="email">Ihre Email:</label>
        </td>
        <td class="mibreit-mailing-list__right">
          <input id="email" name="email" type="text" class="fluid" spellcheck="false">
        </td>
      </tr>
      <tr>
        <td class="mibreit-mailing-list__left">
          <input type="checkbox" id="privacy" name="privacy" class="mibreit-mailing-list__checkbox">
        </td>
        <td class="mibreit-contact__right">
          <label for="privacy">Durch die Nutzung dieses Formulars erklären Sie sich mit der Speicherung und Verarbeitung Ihrer Daten einverstanden. Mehr Informationen entnehmen Sie bitte der
            <a href="{{privacy_form_url}}">Datenschutzerklärung</a>.</label>
        </td>
      </tr>
      <tr>
        <td class="mibreit-mailing-list__left">&nbsp;</td>
        <td class="mibreit-mailing-list__right"><input type="submit" name="submit" value="send" class="mibreit-mailing-list__button"></td>
      </tr>
    </table>
  </form>
  <p id="form-reply" class="mibreit-maling-list__result"></p>
{% endmacro %}