{% from "macros/get-base-page-url.njk" import getBasePageUrl %}
{% from "../../macros/get-page-image.njk" import getPageImage %}
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<meta name="copyright" content="{{page_author}}"/>
<meta name="author" content="{{page_author}}"/>
<meta name="keywords" lang="en-us" xml:lang="en-us" content="{{page_keywords}}"/>
<meta name="description" lang="en-us" xml:lang="en-us" content="{{page_description}}"/>
{% if theme_color | length %}
<meta name="theme-color" content="{{theme_color}}">
{% endif %}
<title>{{page_title}}</title>
<link rel="stylesheet" href="/styles/styles.css" type="text/css"/>
<style>
@media (min-width: 360px) {
  html {
    font-size: 55% !important;
  }
}

@media (min-width: 420px) {
  html {
    font-size: 62.5% !important;
  }
}

@media (min-width: 480px) {
  html {
    font-size: 66% !important;
  }
}

@media (min-width: 600px) {
  html {
    font-size: 75% !important;
  } 
}

@media (min-width: 801px) {
  html {
    font-size: 100% !important;
  }
}

@media (min-width: 864px) 
{
  .content {
    max-width: 54rem;
  } 
}

</style>